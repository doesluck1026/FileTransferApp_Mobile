<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FileTransferApp_Mobile.SplashScreen"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="#1E88FA"
             Appearing="ContentPage_Appearing"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="#1E88FA" VerticalOptions="Center" HorizontalOptions="Center" >
            <Image x:Name="img_Splash"
                   Source="BC_logo_1.png"
                   HeightRequest="75" 
                   WidthRequest="75" />
            <Label Text="Buggy Company." TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>